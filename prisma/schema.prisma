  difficulty      String   @default("easy") // easy (10 XP), medium (25 XP), hard (50 XP)
  streak          Int      @default(0)
  maxStreak       Int      @default(0)
  totalCompleted  Int      @default(0)
  lastCompletedAt DateTime?
  isActive        Boolean  @default(true)
