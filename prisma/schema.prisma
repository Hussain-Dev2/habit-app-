generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  passwordHash  String?
  username      String?
  points        Int       @default(0)
  clicks        Int       @default(0)
  lastClick     DateTime?
  isAdmin       Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Smart Points System
  dailyEarnings     Int       @default(0)
  lifetimePoints    Int       @default(0)
  pointsFromAds     Int       @default(0)
  pointsFromTasks   Int       @default(0)
  lastActivityAt    DateTime? @default(now())
  lastDailyReset    DateTime? @default(now())
  streakDays        Int       @default(0)
  totalSessionTime  Int       @default(0) // in seconds

  // Advertising System
  lastAdWatch       DateTime?
  adWatchCount      Int       @default(0)

  // Referral System
  referralCode      String?   @unique // User's unique referral code
  referredBy        String?   // Referral code of who referred this user
  referredByUser    User?     @relation("Referrals", fields: [referredBy], references: [referralCode])
  referrals         User[]    @relation("Referrals")
  totalReferrals    Int       @default(0)
  referralEarnings  Int       @default(0)

  accounts          Account[]
  sessions          Session[]
  orders            Order[]
  pointsHistory     PointsHistory[]
  dailyStats        DailyStats[]
  achievements      UserAchievement[]
  tasks             Task[]
  notifications     Notification[]
  activityCompletions ActivityCompletion[]
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Order {
  id           String   @id @default(cuid())
  user         User     @relation(fields: [userId], references: [id])
  userId       String
  product      Product  @relation(fields: [productId], references: [id])
  productId    String
  cost         Int
  redeemCode   String?  // The actual code for digital products
  isRevealed   Boolean  @default(false) // Has user scratched to reveal
  isUsed       Boolean  @default(false) // Has user marked as used
  status       String   @default("pending") // "pending", "delivered", "cancelled"
  deliveredAt  DateTime? // When code was delivered
  createdAt    DateTime @default(now())

  @@index([userId])
  @@index([status])
}


model Product {
  id          String   @id @default(cuid())
  title       String
  description String?
  costPoints  Int
  stock       Int?     // null => unlimited
  imageUrl    String?  // Product image URL
  category    String?  // "Google Play", "iTunes", "Steam", "Game Codes", etc
  value       String?  // "$10", "$25", "100 Coins", etc
  region      String?  // "USA", "EU", "UK", "Global", etc
  isDigital   Boolean  @default(true)
  createdAt   DateTime @default(now())

  orders      Order[]
  codes       RedemptionCode[]
}

// Smart Points System Models
model PointsHistory {
  id          String   @id @default(cuid())
  userId      String
  amount      Int
  source      String   // "click", "ad_watch_adsterra", "ad_watch_google", "activity", "task", etc
  description String?
  createdAt   DateTime @default(now())

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
}

model DailyStats {
  id              String   @id @default(cuid())
  userId          String
  date            DateTime @default(now())
  clicksToday     Int      @default(0)
  pointsEarned    Int      @default(0)
  adsWatched      Int      @default(0)
  tasksCompleted  Int      @default(0)
  sessionTime     Int      @default(0) // in seconds
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@index([userId])
}

model Achievement {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  icon        String?
  requirement String   // "100_clicks", "1000_points", etc
  reward      Int      // bonus points
  createdAt   DateTime @default(now())

  users       UserAchievement[]
}

model UserAchievement {
  id            String   @id @default(cuid())
  userId        String
  achievementId String
  unlockedAt    DateTime @default(now())

  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  achievement   Achievement @relation(fields: [achievementId], references: [id], onDelete: Cascade)

  @@unique([userId, achievementId])
}

model Task {
  id          String   @id @default(cuid())
  userId      String
  title       String
  description String?
  reward      Int
  completed   Boolean  @default(false)
  completedAt DateTime?
  dueDate     DateTime?
  createdAt   DateTime @default(now())

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

// Redemption Code Pool - Admin adds real codes here
model RedemptionCode {
  id          String   @id @default(cuid())
  product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId   String
  code        String   @unique // The actual gift/redemption code
  isUsed      Boolean  @default(false)
  orderId     String?  // Which order claimed this code
  usedAt      DateTime?
  createdAt   DateTime @default(now())

  @@index([productId, isUsed])
}

// User Notifications (In-App Inbox)
model Notification {
  id          String   @id @default(cuid())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
  type        String   // "order_delivered", "order_pending", "system"
  title       String
  message     String   @db.Text
  orderId     String?  // Link to order if applicable
  isRead      Boolean  @default(false)
  createdAt   DateTime @default(now())

  @@index([userId, isRead])
  @@index([createdAt])
}

// Activity Completion Tracking
model ActivityCompletion {
  id          String   @id @default(cuid())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
  activityId  String   // daily_bonus, watch_ad, etc.
  completedAt DateTime @default(now())
  reward      Int      // Points earned from this completion
  
  @@unique([userId, activityId])
  @@index([userId])
  @@index([activityId])
}
