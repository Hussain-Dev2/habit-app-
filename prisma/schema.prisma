model HabitCompletion {
  id          String   @id @default(cuid())
  habitId     String
  userId      String
  completedAt DateTime @default(now())
  pointsEarned Int     @default(0)

  habit       Habit    @relation(fields: [habitId], references: [id], onDelete: Cascade)

  @@unique([habitId, completedAt])
  @@index([userId, completedAt])
  @@index([habitId])
}

// Notification Settings - User preferences for reminders
model NotificationSettings {
  id          String   @id @default(cuid())
  userId      String   @unique
  enabled     Boolean  @default(true)
  reminderTime String  @default("21:00") // Time in HH:MM format (9 PM)
  reminderDays String  @default("Mon,Tue,Wed,Thu,Fri,Sat,Sun") // Days to remind
  pushEnabled Boolean  @default(true)
  emailEnabled Boolean @default(false)
  timezone    String   @default("UTC")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

// Habit Reminders - Track sent reminders
model HabitReminder {
  id          String   @id @default(cuid())
  habitId     String
  userId      String
  sentAt      DateTime @default(now())
  type        String   @default("push") // push, email, sms
  status      String   @default("sent") // sent, failed, clicked
  message     String?
  createdAt   DateTime @default(now())

  habit       Habit    @relation(fields: [habitId], references: [id], onDelete: Cascade)

  @@index([userId, sentAt])
  @@index([habitId, sentAt])
  @@index([status])
}

model HabitTemplate {
  id          String   @id @default(cuid())
  name        String
  description String
  category    String   // health, productivity, fitness, learning, mindfulness
  icon        String
  color       String   @default("#3B82F6")
  habits      Json     // Array of {name, description, difficulty, targetDays}
  isActive    Boolean  @default(true)
  featured    Boolean  @default(false)
  usageCount  Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([category])
  @@index([featured])
  @@index([isActive])
}

model PushSubscription {
  id        String   @id @default(cuid())
  userId    String
  endpoint  String
  p256dh    String
  auth      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ChatMessage {
  id        String   @id @default(cuid())
  userId    String
  content   String   @db.Text
  createdAt DateTime @default(now())
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([createdAt])
}

// Recommendations System
model Recommendation {
  id          String   @id @default(cuid())
  title       String
  description String
  imageUrl    String
  url         String
  category    String   // "Book" or "Course"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([category])
}

model FcmToken {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  deviceType String? // android, ios, web
  lastUsedAt DateTime @default(now())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}
